    "postgres": "^3.4.7",
    "ultracite": "5.1.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@faker-js/faker": "^9.9.0",
    "@types/bun": "^1.2.18",
